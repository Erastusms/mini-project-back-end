<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Athlete</title>
  </head>
  <body>
    <h1 class="text-center display-4">List Athlete</h1>
    <center><a href="/">Return to Home</a></center>
    
    <hr />
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th>Full Name</th>
          <th>Country</th>
          <th>Age</th>
          <th>Gender</th>
          <th>Sport</th>
          <th>Edit Data</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% athletes.forEach((athlete) => { %>

        <tr>
          <td><%= athlete.firstName %> <%= athlete.lastName %></td>
          <td>
            <img
              src="<%= athlete.Country.flagImage %>"
              height="24px"
              width="32px"
            />
            <%= athlete.Country.code %>
          </td>
          <td><%= athlete.age %></td>
          <td><%= athlete.gender %></td>
          <td>
            <img src="<%= athlete.Sport.logo %>" class="px-2" />
            <a href="/sport/detail/<%= athlete.Sport.name %>">
              <%= athlete.Sport.name %>
            </a>
          </td>
          <td>
            <a href="/athlete/edit/<%= athlete.id %>">Edit Athlete</a>
          </td>
          <td>
            <a href="/athlete/delete/<%= athlete.id %>" onclick="alert('Athlete has been removed!')"
              ><img src="https://www.pinclipart.com/picdir/big/126-1261691_logo-eisenbahn-png-minus-button-icon-png-clipart.png" height="24px"
              width="24px"
            /></a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>

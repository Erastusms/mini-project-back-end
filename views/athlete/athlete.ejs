<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Athlete</title>
  </head>
  <body>
    <h1 class="text-center display-4">LIST Athlete</h1>
    <hr />
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="text-center">Nama</th>
          <th class="text-center">Negara</th>
          <th>Cabang Olahraga</th>
        </tr>
      </thead>
      <tbody>
        <% athletes.forEach((athlete) => { %>

        <tr>
          <td class="text-center"><%= athlete.first_name %> <%= athlete.last_name %></td>
          <td class="text-center">
            <img src="<%= athlete.Country.flagImage %>" height=24px width= 32px />  
            <%= athlete.Country.code %></td>
          <td>
            <img src="<%= athlete.Sport.logo %>" class="px-2" />
            <%= athlete.Sport.name %>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>

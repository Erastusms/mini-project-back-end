<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Country</title>
    <style>
      img {
        height: 24px;
        width: 32px;
      }
    </style>
  </head>
  <body>
    <h1 class="text-center display-4">LIST Country</h1>
    <hr />
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th>Country</th>
          <th>Country Name</th>
          <th>Tambah Atlit</th>
          <th>Lihat Cabor yang diikuti</th>
          <th>Lihat atlitnya</th>
        </tr>
      </thead>
      <tbody>
        <% countries.forEach((country) => { %>
        <tr>
          <td>
            <img src="<%= country.flagImage %>" class="rounded" /> <%=
            country.code %>
          </td>
          <td><%= country.name %></td>
          <td>
            <a href="/athlete/<%= country.name %>/add"
              ><img src="https://icon-library.com/images/ui_2-512.png"
            /></a>
          </td>
          <td>
            <a class="btn btn-primary btn-lg" href="/athlete/<%= country.name %>/sport" role="button"
              >See Sports</a
            >
          </td>
          <td>
            <a class="btn btn-primary btn-lg" href="/athlete/<%= country.name %>/" role="button"
              >See Athlete</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>

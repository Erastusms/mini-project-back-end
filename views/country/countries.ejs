<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Country</title>
    <style>
      body {
        height: 1000px;
      }
    </style>
  </head>
  <body>
    <h1 class="text-center display-4">LIST COUNTRY</h1>
    <center><a href="/">Return to Home</a></center>
    <hr />
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th>Code Name</th>
          <th>Country Name</th>
          <th>Sports</th>
          <th>Athlete</th>
          <th>Add Athlete</th>
          <th>Resign</th>
        </tr>
      </thead>
      <tbody>
        <% countries.forEach((country) => { %>
        <tr>
          <td>
            <img
              src="<%= country.flagImage %>"
              class="rounded"
              height="24px"
              width="32px"
            />
            <%= country.code %>
          </td>
          <td><%= country.name %></td>
          <td>
            <a
              class="btn btn-primary btn-lg"
              href="/athlete/<%= country.name %>/sport"
              role="button"
              >See Sports</a
            >
          </td>
          <td>
            <a
              class="btn btn-primary btn-lg"
              href="/athlete/<%= country.name %>/"
              role="button"
              >See Athlete</a
            >
          </td>
          <td>
            <a href="/athlete/<%= country.name %>/add"
              ><img src="https://icon-library.com/images/ui_2-512.png" height="28px"
              width="28px"
            /></a>
          </td>
          <td>
            <a href="/country/delete/<%= country.id %>" onclick="alert('This Country has been resign!')"
              ><img src="https://www.pinclipart.com/picdir/big/126-1261691_logo-eisenbahn-png-minus-button-icon-png-clipart.png" height="24px"
              width="24px"
            /></a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>

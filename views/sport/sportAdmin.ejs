<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Sport</title>
  </head>
  <body>
    <h1 class="text-center display-4">LIST SPORT</h1>
    <center><a href="/admin">Return to Admin Page</a></center>
    <hr />
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Sports</th>
          <th>Venue</th>
          <th>Status</th>
          <th>Quota</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% sports.forEach((sport) => { %>
        <tr>
          <td>
            <img src="<%= sport.logo %>" />
            <a href="/sport/detail/<%= sport.name %>"><%= sport.name %></a>
          </td>
          <td><%= sport.venue %></td>
          <td><%= sport.status %></td>
          <td><%= sport.updatedQuota %>/<%= sport.quota %></td>
          <td>
            <a
              class="btn btn-primary btn-lg"
              href="/sport/admin/edit/<%= sport.name %>"
              role="button"
              >Edit</a
            >
            <a
              href="/sport/delete/<%= sport.id %>"
              class="btn btn-primary btn-lg"
              onclick="alert('Sport has been removed!')"
              >Delete</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
